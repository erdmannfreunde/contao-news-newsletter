{
  "name": "erdmannfreunde/contao-news-newsletter",
  "description": "Send news entries as standalone newsletter via the Notification Center.",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "require": {
    "php": "^7.1",
    "contao/core-bundle": "^4.4",
    "contao/news-bundle": "^4.4",
    "contao/newsletter-bundle": "^4.4",
    "codefog/contao-haste": "^4.23",
    "doctrine/dbal": "^2.8",
    "symfony/config": "^3.3 || ^4.0",
    "symfony/dependency-injection": "^3.3 || ^4.0",
    "symfony/http-kernel": "^3.3 || ^4.0",
    "terminal42/notification_center": "^1.5"
  },
  "suggest": {
      "terminal42/contao-news_newsletter": "Please switch to the terminal42 extension that should be fully compatible"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0"
  },
  "authors": [
    {
      "name": "Erdmann & Freunde",
      "homepage": "https://erdmann-freunde.de",
      "email": "moin@erdmann-freunde.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "ErdmannFreunde\\ContaoNewsNewsletterBundle\\": "src/"
    }
  },
  "extra" : {
    "contao-manager-plugin": "ErdmannFreunde\\ContaoNewsNewsletterBundle\\ContaoManager\\Plugin"
  }
}
